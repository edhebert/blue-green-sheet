{# templates/_layout.twig #}
<!DOCTYPE html>
<html lang="{{ craft.app.language|e }}">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  {% block meta %}{% endblock %}
  <title>{% block title %}{{ siteName|e }}{% endblock %}</title>

  <link
    {# href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    crossorigin="anonymous"> #}

    {# Canvas themes #}
	{# Font Imports #}
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=PT+Serif:ital@0;1&display=swap" rel="stylesheet">

	{# Core Style  #}
	<link rel="stylesheet" href="{{siteUrl}}style.css">

	{# Font Icons  #}
	<link rel="stylesheet" href="{{siteUrl}}css/font-icons.css">

	{# Plugins / Components CSS  #}

	<link rel="stylesheet" href="{{siteUrl}}css/swiper.css">

	<!-- Custom CSS -->
    <link rel="stylesheet" href="{{siteUrl}}css/custom.css">

	<meta name="viewport" content="width=device-width, initial-scale=1">


  {% block styles %}{% endblock %}
  {{ head() }}
</head>
<body class="{% block bodyClass %}{% endblock %} stretched">
  {# Craft CMS required to know where to inject hooks and other code #}
  {{ beginBody() }}

	<!-- Document Wrapper

	============================================= -->

	<div id="wrapper"> {#  Canvas - Site Wrapper #}


		{# Canvas - Header  #}
		<header id="header" class="dark">
			<div id="header-wrap">
				<div class="container">
					<div class="header-row">

						<!-- Logo
						============================================= -->
						<div id="logo">
							<a href="{{ siteUrl }}">
								<img class="logo-default" src="{{siteUrl}}images/BGS-logo.png" alt="BlueGreen Sheet">
								<img class="logo-dark" src="{{siteUrl}}images/BGS-logo.png" alt="BlueGreen Sheet">
							</a>
						</div><!-- #logo end -->

						<div class="primary-menu-trigger">
							<button class="cnvs-hamburger" type="button" title="Open Mobile Menu">
								<span class="cnvs-hamburger-box"><span class="cnvs-hamburger-inner"></span></span>
							</button>
						</div>

						<!-- Primary Navigation
						============================================= -->
						<nav class="primary-menu">

							<ul class="menu-container">
 								<li class="menu-item">
									<a class="menu-link" href="{{ siteUrl }}work"><div>Search Jobs</div></a>
								</li>                           
								<li class="menu-item">
									<a class="menu-link" href="{{ siteUrl }}creative"><div>Post A Job</div></a>
								</li>
								<li class="menu-item">
									<a class="menu-link" href="{{ siteUrl }}innovation"><div>Pricing</div></a>
								</li>
								<li class="menu-item">
									<a class="menu-link" href="{{ siteUrl }}intellectual-property"><div>Subscribe</div></a>
								</li>                            
                                <li class="menu-item">
									<a class="menu-link" href="{{ siteUrl }}contact"><div>Contact</div></a>
								</li>
							</ul>

						</nav><!-- #primary-menu end -->
					</div>
				</div>
			</div>
			<div class="header-wrap-clone"></div>
		</header>

		{# Canvas - site Content  #}
		<section id="content">
			<div class="content-wrap">
                {% block content %}{% endblock %}
            </div>
        </section>

 		{# Canvas - Footer  #}
		<footer id="footer" class="dark">
			<div class="container">

				...

			</div>

			{# Canvas - Copyrights  #}
			<div id="copyrights">
				<div class="container">

					...

				</div>
			</div>

		</footer>      

    </div> {#  End Canvas Site Wrapper #}

  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    crossorigin="anonymous"></script>

	{# Canvas - go To Top  #}
	<div id="gotoTop" class="uil uil-angle-up"></div>

    {# Canvas Javascript  
	<script src="{{siteUrl}}js/plugins.min.js"></script> #}
	<script src="{{siteUrl}}js/functions.bundle.js"></script> 

  {% block scripts %}{% endblock %}
  {# Craft CMS required to know where to inject hooks and other code #}
  {{ endBody() }}
</body>
</html>