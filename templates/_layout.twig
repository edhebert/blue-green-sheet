{# templates/_layout.twig #}
<!DOCTYPE html>
<html lang="{{ craft.app.language|e }}">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  {% block meta %}{% endblock %}
  <title>{% block title %}{{ siteName|e }}{% endblock %}</title>

  <link
    {# href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    crossorigin="anonymous"> #}

    {# Canvas themes #}
	{# Font Imports #}
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:ital@0;1&display=swap" rel="stylesheet">

	{# Core Style  #}
	<link rel="stylesheet" href="{{siteUrl}}style.css">

	{# Font Icons  #}
	<link rel="stylesheet" href="{{siteUrl}}css/font-icons.css">

	{# Plugins / Components CSS  #}

	<link rel="stylesheet" href="{{siteUrl}}css/swiper.css">

	<!-- Custom CSS -->
    <link rel="stylesheet" href="{{siteUrl}}css/custom.css">

	<meta name="viewport" content="width=device-width, initial-scale=1">


  {% block styles %}{% endblock %}
  {{ head() }}
</head>
<body class="{% block bodyClass %}{% endblock %} stretched">
  {# Craft CMS required to know where to inject hooks and other code #}
  {{ beginBody() }}

	<!-- Document Wrapper

	============================================= -->

	<div id="wrapper"> {#  Canvas - Site Wrapper #}

		{# Canvas - Header  #}

        {# if homepage make the menu transparent behind the image  #}
            {% set url = craft.app.request.url %}

		<header id="header" class="{% if url == "/" %}transparent-header transparent-header-responsive {% endif %}dark">
			<div id="header-wrap">
				<div class="container">
					<div class="header-row top-search-parent">

						<!-- Logo
						============================================= -->
						<div id="logo">
							<a href="{{ siteUrl }}">
								<img class="logo-default" src="{{siteUrl}}images/BGS-logo.png" alt="BlueGreen Sheet">
								<img class="logo-dark" src="{{siteUrl}}images/BGS-logo.png" alt="BlueGreen Sheet" style="padding: 10%">
							</a>
						</div><!-- #logo end -->

                        {# these buttons don't collapse on mobile  #}
                        <div class="header-misc justify-content-xl-end">
                                {% if currentUser %}

									    <a class="ms-6 button rounded-pill button-border border-width-1 button-light button-mini" style="text-transform: uppercase;" href="{{ siteUrl }}logout"><div>Logout</div></a>

                                {% else %}

									    <a class="ms-6 button rounded-pill button-mini" style="text-transform: uppercase;" href="{{ siteUrl }}login"><i class="bi bi-box-arrow-in-right me-2"></i>Sign In</a>
 
                                        <a class="button button-border border-width-1 button-light rounded-pill button-mini" style="text-transform: uppercase;" href="{{ siteUrl }}register"><i class="bi bi-person-plus me-2"></i>Sign Up</a>                            
                                {% endif %}                        
                        
                        </div>
                        {# this is the hamburger menu  #}
						<div class="primary-menu-trigger">
							<button class="cnvs-hamburger" type="button" title="Open Mobile Menu">
								<span class="cnvs-hamburger-box"><span class="cnvs-hamburger-inner"></span></span>
							</button>
						</div>

						{# this is the standard menu  #}
						<nav class="primary-menu">

							<ul class="menu-container">
 								<li class="menu-item">
									<a class="menu-link" href="{{ siteUrl }}jobs"><div>Search Jobs</div></a>
								</li>                           
								<li class="menu-item">
									<a class="menu-link" href="{{ siteUrl }}jobs/post"><div>Post A Job</div></a>
								</li>
								<li class="menu-item">
									<a class="menu-link" href="{{ siteUrl }}pricing"><div>Pricing</div></a>
								</li>
								<li class="menu-item">
									<a class="menu-link" href="{{ siteUrl }}subscribe"><div>Subscribe</div></a>
								</li>                            
							</ul>

						</nav><!-- #primary-menu end -->
					</div>
				</div>
			</div>
			<div class="header-wrap-clone"></div>
		</header>

		{# Canvas - site Content  #}

        {% block slider %}{% endblock %}
		<section id="content">
			<div class="content-wrap">
                {% block content %}{% endblock %}
            </div>
        </section>

 		{# Canvas - Footer  
		<footer id="footer" class="dark">
			<div class="container">

				...

			</div>

			<div id="copyrights">
				<div class="container">

					...

				</div>
			</div>

		</footer>   #}

    {% include '_includes/footer.twig' %}   

    </div> {#  End Canvas Site Wrapper #}

  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    crossorigin="anonymous"></script>

	{# Canvas - go To Top  #}
	<div id="gotoTop" class="uil uil-angle-up"></div>

    {# Canvas Javascript  #}

    {# only load plugins page, as it breaks the accordion menus on subpages  #}
    {% if url == "/" %}
        <script src="{{siteUrl}}js/plugins.min.js"></script>
    {% endif %}
	
	<script src="{{siteUrl}}js/functions.bundle.js"></script> 

  {% block scripts %}{% endblock %}
  {# Craft CMS required to know where to inject hooks and other code #}
  {{ endBody() }}
</body>
</html>