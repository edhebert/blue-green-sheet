{% extends "_layout.twig" %}

{% block title %}{{ entry.title }} - {{ siteName }}{% endblock %}

{% block content %}
<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <!-- Header Section -->
      <div class="text-center mb-5">
        <h1 class="display-4 fw-bold mb-3">{{ entry.title }}</h1>
        <p class="lead text-muted">
          {{ entry.subheading }}
        </p>
      </div>

      {{ entry.body }}
      
      <!-- What We Do Section -->

      {% for block in entry.capability %}
        <div class="mb-5">
            <div class="card border-0 shadow-sm mb-4" {% if block.color|length %} style="border-left: 4px solid {{ block.color }} !important;" {% endif %} >
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <i class="fa-solid fa-{{ block.titleIcon }} me-3" style="font-size: 1.5rem; color: {{ block.color }}"></i>
                        <h2 class="h3 fw-bold mb-0" style="color:{{ block.color }}">{{ block.title }}</h2>
                    </div>
                    <p class="mb-4">
                    {{ block.body }}
                    </p>

                    <div class="row g-3 mb-4">
                        {% set totalCount = block.list|length %}
                        {% for item in block.list %} 
                            {# set the number of colums based on the loop length  #}
                            <div class="col-md-{{ 12 / totalCount }}">
                                <div class="border rounded p-3 h-100">
                                    <h4 class="fw-bold mb-2" style="color:{{ block.color }}">{{  item.title }}</h4>
                                    <ul class="list-unstyled small">
                                        {% for myList in item.listItems %}
                                            
                                        <li class="mb-1"><i class="fa-solid fa-{{ item.listIcon }} me-2" style="color:{{ block.color }} "></i>{{myList.listItem}}</li>

                                        {% endfor %}
                                    </ul>
                                </div>
                            </div>
                        {% endfor %}
                    </div>

                    {% if block.color|length %}
                    
                        {% if block.color.label == "Blue" %}
                            {% set colorClasses = "alert alert-info border-start border-1 border-info" %}
                        {% elseif  block.color.label == "Green" %}
                            {% set colorClasses = "alert alert-success border-start border-1 border-success" %}   
                        {% elseif  block.color.label == "Red" %}
                            {% set colorClasses = "alert alert-danger border-start border-1 border-danger" %}  
                        {% endif %}

                    {% endif %}
                    
                    {% if block.banner|length %}               
                        <div class=" {% if block.color|length %} {{ colorClasses }} {% endif %} mt-4">
                            <p class="mb-0">
                                {{ block.banner }}
                            </p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>


      {% endfor %}

      <!-- Action Section -->
      <div class="text-center">
        <div class="card border-0" style="background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);">
          <div class="card-body p-4">
            <h3 class="h5 mb-3">Ready to Connect with Educational Professionals?</h3>
            {% if currentUser %}
              <!-- User is logged in -->
              <p class="text-muted mb-4">
                Welcome back, {{ currentUser.firstName }}! Start reaching qualified candidates with your next job posting.
              </p>
              <a href="{{ url('jobs/post') }}" class="button button-xlarge rounded-pill px-5">
                <i class="bi bi-plus-circle me-2"></i>Post a Job Opportunity
              </a>
            {% else %}
              <!-- User is not logged in -->
              <p class="text-muted mb-4">
                Join educational institutions nationwide who trust Blue Green Sheet to find their next great hire.
              </p>
              <div class="d-flex gap-3 justify-content-center flex-wrap">
                <a href="{{ url('register') }}" class="button button-xlarge rounded-pill px-4">
                  <i class="bi bi-person-plus me-2"></i>Get Started Today
                </a>
                <a href="{{ url('login') }}" class="button button-xlarge rounded-pill button-border px-4">
                  <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
                </a>
              </div>
            {% endif %}
          </div>
        </div>
      </div>

      <!-- Platform Benefits -->
      <div class="row g-4 mt-5">
        {% for block in entry.benefits %}
            <div class="col-md-4 text-center">
            <div class="mb-3">
                <i class=" {% if block.iconClass|length %} fa-solid fa-{{ block.iconClass }} {% endif %} text-primary" style="font-size: 2rem;"></i>
            </div>
            <h4 class="h6 fw-bold">{{ block.title }}</h4>
            <p class="text-muted small">
                {{ block.benefitDescription }}
            </p>
            </div>            
        {% endfor %}



      <!-- FAQ Section -->
      <div class="mt-5">
        <h3 class="h4 text-center mb-4">Common Questions</h3>
        <div class="accordion" id="overviewFAQ">

          {% for item in entry.faqs %}
            <div class="accordion-item border-0 mb-3">
                <h4 class="accordion-header">
                <button class="accordion-button collapsed bg-light border-0 rounded" type="button" data-bs-toggle="collapse" data-bs-target="#faq{{ loop.index }}">
                    {{ item.question }}
                </button>
                </h4>
                <div id="faq{{ loop.index }}" class="accordion-collapse collapse" data-bs-parent="#overviewFAQ">
                    <div class="accordion-body">
                        {{ item.answer }}
                    </div>
                </div>
            </div>            
          {% endfor %}

        </div>
      </div>



      
    </div>
  </div>
</div>
{% endblock %}