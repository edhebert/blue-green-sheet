{# templates/login.twig #}
{% extends "_layout" %}

{% block content %}
<div class="login-container">

{% do craft.app.session.removeFlash('error') %}

{# Add this right after the opening <div class="login-container"> #}
{% if craft.app.request.isPost %}
    <div style="background: yellow; padding: 1rem; margin: 1rem 0;">
        <strong>DEBUG - Form was submitted:</strong><br>
        loginName: {{ craft.app.request.getBodyParam('loginName') }}<br>
        Password provided: {{ craft.app.request.getBodyParam('password') ? 'YES' : 'NO' }}<br>
        CSRF Token: {{ craft.app.request.getBodyParam(craft.app.config.general.csrfTokenName) ? 'YES' : 'NO' }}
    </div>
{% endif %}

{% if craft.app.session.hasFlash('notice') %}
    <div style="background: green; padding: 1rem;">{{ craft.app.session.getFlash('notice') }}</div>
{% endif %}

{% if craft.app.session.hasFlash('error') %}
    <div style="background: red; color: white; padding: 1rem;">{{ craft.app.session.getFlash('error') }}</div>
{% endif %}

    <h2>Login</h2>
    
    {% if errors is defined %}
        <div class="error-messages">
            {% for error in errors %}
                <p class="error">{{ error }}</p>
            {% endfor %}
        </div>
    {% endif %}

<form method="post" accept-charset="UTF-8">
    {{ csrfInput() }}
    {{ actionInput('users/login') }}

    {# Redirect to the 'profile' page after login #}
    {{ redirectInput('profile') }}
    
    <div class="form-group">
        <label for="loginName">Email Address</label>
        <input type="email" 
               id="loginName" 
               name="loginName" 
               required>
    </div>

    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" 
               id="password" 
               name="password" 
               required>
    </div>

    <button type="submit" class="button rounded-pill mt-4" style="width: 100%">Login</button>
</form>
    <p class="center"><a href="/register">Don't have an account? Register here</a></p>
</div>

<style>
.login-container {
    max-width: 400px;
    margin: 2rem auto;
    padding: 2rem;
    border: 1px solid #ddd;
    border-radius: 8px;
}

.form-group {
    margin-bottom: 1rem;
}

.form-group label {
    display: block;
    margin-bottom: 0.25rem;
    font-weight: bold;
}

.form-group input {
    width: 100%;
    padding: 0.5rem;
    border: 1px solid #ccc;
    border-radius: 4px;
}

.form-group input[type="checkbox"] {
    width: auto;
    margin-right: 0.5rem;
}

.error {
    color: #d32f2f;
    margin-bottom: 1rem;
}

.btn {
    padding: 0.75rem 1.5rem;
    background: #1976d2;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 1rem;
    width: 100%;
}

.btn:hover {
    background: #1565c0;
}

</style>
{% endblock %}