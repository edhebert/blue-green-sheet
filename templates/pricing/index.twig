{% extends "_layout.twig" %}

{% block title %}Pricing Â· {{ siteName }}{% endblock %}

{% block content %}
<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <!-- Header Section -->
      <div class="text-center mb-5">
        <h1 class="display-4 fw-bold mb-3">Simple, Transparent Pricing</h1>
        <p class="lead text-muted">
          Reach top educational professionals with our premium job posting platform
        </p>
      </div>

      <!-- Pricing Cards -->
      <div class="row g-4 mb-5">
        <!-- 6 Month Plan -->
        <div class="col-md-6">
          <div class="card h-100 border-0 shadow-sm">
            <div class="card-body p-4 text-center">
              <h3 class="h4 fw-bold mb-3">6-Month Posting</h3>
              <div class="mb-4">
                <span class="display-4 fw-bold text-primary">$300</span>
                <div class="text-muted">per job posting</div>
              </div>
              <ul class="list-unstyled mb-4">
                <li class="mb-2">
                  <i class="bi bi-check-circle-fill text-success me-2"></i>
                  6 months of visibility
                </li>
                <li class="mb-2">
                  <i class="bi bi-check-circle-fill text-success me-2"></i>
                  Featured in search results
                </li>
                <li class="mb-2">
                  <i class="bi bi-check-circle-fill text-success me-2"></i>
                  Access to qualified candidates
                </li>
                <li class="mb-2">
                  <i class="bi bi-check-circle-fill text-success me-2"></i>
                  Upload job attachments
                </li>
              </ul>
              <div class="text-muted small">
                Perfect for most positions
              </div>
            </div>
          </div>
        </div>

        <!-- 12 Month Plan -->
        <div class="col-md-6">
          <div class="card h-100 border-0 shadow-sm position-relative">
            <div class="position-absolute top-0 start-50 translate-middle">
              <span class="badge px-3 py-2" style="background-color:var(--cnvs-themecolor)">Best Value</span>
            </div>
            <div class="card-body p-4 text-center">
              <h3 class="h4 fw-bold mb-3">12-Month Posting</h3>
              <div class="mb-4">
                <span class="display-4 fw-bold text-primary">$400</span>
                <div class="text-muted">per job posting</div>
                <small class="text-success fw-semibold">Save $200!</small>
              </div>
              <ul class="list-unstyled mb-4">
                <li class="mb-2">
                  <i class="bi bi-check-circle-fill text-success me-2"></i>
                  12 months of visibility
                </li>
                <li class="mb-2">
                  <i class="bi bi-check-circle-fill text-success me-2"></i>
                  Featured in search results
                </li>
                <li class="mb-2">
                  <i class="bi bi-check-circle-fill text-success me-2"></i>
                  Access to qualified candidates
                </li>
                <li class="mb-2">
                  <i class="bi bi-check-circle-fill text-success me-2"></i>
                  Upload job attachments
                </li>
                <li class="mb-2">
                  <i class="bi bi-check-circle-fill text-success me-2"></i>
                  Extended reach & exposure
                </li>
              </ul>
              <div class="text-muted small">
                Ideal for hard-to-fill positions
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Action Section -->
      <div class="text-center">
        {% if currentUser %}
          <!-- User is logged in -->
          <div class="mb-4">
            <h3 class="h5 mb-3">Ready to post your job opportunity?</h3>
            <p class="text-muted mb-4">
              Welcome back, {{ currentUser.firstName }}! Start reaching qualified educational professionals today.
            </p>
            <a href="{{ url('jobs/post') }}" class="btn btn-primary btn-lg px-5">
              <i class="bi bi-plus-circle me-2"></i>Post a New Job
            </a>
          </div>
        {% else %}
          <!-- User is not logged in -->
          <div class="mb-4">
            <h3 class="h5 mb-3">Get started with your first job posting</h3>
            <p class="text-muted mb-4">
              Join our community of educational institutions and start connecting with top talent.
            </p>
            <div class="d-flex gap-3 justify-content-center flex-wrap">
              <a href="{{ url('login') }}" class="button button-xlarge button-rounded px-4">
                <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
              </a>            
              <a href="{{ url('register') }}" class="button button-xlarge button-rounded  button-border px-4">
                <i class="bi bi-person-plus me-2"></i>Create Account
              </a>
            </div>
          </div>
        {% endif %}
      </div>

      <!-- Additional Info -->
      <div class="row g-4 mt-5">
        <div class="col-md-4 text-center">
          <div class="mb-3">
            <i class="bi bi-people-fill text-primary" style="font-size: 2rem;"></i>
          </div>
          <h4 class="h6 fw-bold">Quality Candidates</h4>
          <p class="text-muted small">
            Connect with experienced educational professionals actively seeking new opportunities.
          </p>
        </div>
        <div class="col-md-4 text-center">
          <div class="mb-3">
            <i class="bi bi-shield-check text-primary" style="font-size: 2rem;"></i>
          </div>
          <h4 class="h6 fw-bold">Trusted Platform</h4>
          <p class="text-muted small">
            Join hundreds of schools and educational institutions who trust our platform.
          </p>
        </div>
        <div class="col-md-4 text-center">
          <div class="mb-3">
            <i class="bi bi-headset text-primary" style="font-size: 2rem;"></i>
          </div>
          <h4 class="h6 fw-bold">Support</h4>
          <p class="text-muted small">
            Get help when you need it with our dedicated customer support team.
          </p>
        </div>
      </div>

      <!-- FAQ Section -->
      <div class="mt-5">
        <h3 class="h4 text-center mb-4">Frequently Asked Questions</h3>
        <div class="accordion" id="pricingFAQ">
          <div class="accordion-item border-0 mb-3">
            <h4 class="accordion-header">
              <button class="accordion-button collapsed bg-light border-0 rounded" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                How long does it take for my job to go live?
              </button>
            </h4>
            <div id="faq1" class="accordion-collapse collapse" data-bs-parent="#pricingFAQ">
              <div class="accordion-body">
                Job postings are reviewed and typically go live within 24 hours of payment confirmation.
              </div>
            </div>
          </div>

          <div class="accordion-item border-0 mb-3">
            <h4 class="accordion-header">
              <button class="accordion-button collapsed bg-light border-0 rounded" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                What payment methods do you accept?
              </button>
            </h4>
            <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#pricingFAQ">
              <div class="accordion-body">
                We accept all major credit cards and can also arrange invoice billing for established institutions.
              </div>
            </div>
          </div>

          <div class="accordion-item border-0 mb-3">
            <h4 class="accordion-header">
              <button class="accordion-button collapsed bg-light border-0 rounded" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
                Can I edit my job posting after it's live?
              </button>
            </h4>
            <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#pricingFAQ">
              <div class="accordion-body">
                Yes, you can edit your job posting at any time through your account dashboard at no additional cost.
              </div>
            </div>
          </div>

          <div class="accordion-item border-0 mb-3">
            <h4 class="accordion-header">
              <button class="accordion-button collapsed bg-light border-0 rounded" type="button" data-bs-toggle="collapse" data-bs-target="#faq4">
                What happens if I need to remove my posting early?
              </button>
            </h4>
            <div id="faq4" class="accordion-collapse collapse" data-bs-parent="#pricingFAQ">
              <div class="accordion-body">
                You can remove your posting at any time. While we don't offer prorated refunds, you can keep the posting active for the full duration you paid for.
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}