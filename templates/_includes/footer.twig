{# Canvas - Footer  #}
<footer id="footer" class="dark">
    <div class="container">
        <div class="row g-4 py-5">
            <!-- About Section -->
            <div class="col-lg-4 col-md-6 mb-4">
                <h5 class="text-white mb-3">Blue Green Sheet</h5>
                <p class="text-light mb-3">
                    Connecting independent school professionals with exceptional opportunities since 1990.
                    We facilitate meaningful connections between talented educators and outstanding independent schools.
                </p>
                <div class="d-flex gap-2">
                    <a href="#" class="text-light" aria-label="Follow us on Facebook">
                        <i class="bi bi-facebook" style="font-size: 1.2rem;"></i>
                    </a>
                    <a href="#" class="text-light" aria-label="Follow us on Twitter">
                        <i class="bi bi-twitter" style="font-size: 1.2rem;"></i>
                    </a>
                    <a href="#" class="text-light" aria-label="Connect on LinkedIn">
                        <i class="bi bi-linkedin" style="font-size: 1.2rem;"></i>
                    </a>
                </div>
            </div>

            <!-- Quick Links -->
            <div class="col-lg-2 col-md-6 mb-4">
                <h6 class="text-white mb-3">Quick Links</h6>
                <ul class="list-unstyled">
                    <li class="mb-2">
                        <a href="{{ url('jobs') }}" class="text-light text-decoration-none">
                            <i class="bi bi-search me-2"></i>Browse Jobs
                        </a>
                    </li>
                    <li class="mb-2">
                        <a href="{{ url('pricing') }}" class="text-light text-decoration-none">
                            <i class="bi bi-tag me-2"></i>Pricing
                        </a>
                    </li>
                    <li class="mb-2">
                        <a href="{{ url('about') }}" class="text-light text-decoration-none">
                            <i class="bi bi-info-circle me-2"></i>About Us
                        </a>
                    </li>
                    {% if currentUser %}
                        <li class="mb-2">
                            <a href="{{ url('logout') }}" class="text-light text-decoration-none">
                                <i class="bi bi-box-arrow-right me-2"></i>Logout
                            </a>
                        </li>
                    {% else %}
                        <li class="mb-2">
                            <a href="{{ url('login') }}" class="text-light text-decoration-none">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </div>

            <!-- For Schools -->
            <div class="col-lg-3 col-md-6 mb-4">
                <h6 class="text-white mb-3">For Schools & Consultants</h6>
                <ul class="list-unstyled">
                    {% if currentUser and currentUser.can('postJobs') %}
                        <li class="mb-2">
                            <a href="{{ url('jobs/post') }}" class="text-light text-decoration-none">
                                <i class="bi bi-plus-circle me-2"></i>Post a Job
                            </a>
                        </li>
                    {% endif %}
                    <li class="mb-2">
                        <a href="{{ url('pricing') }}" class="text-light text-decoration-none">
                            <i class="bi bi-currency-dollar me-2"></i>View Pricing
                        </a>
                    </li>
                    {% if not currentUser %}
                        <li class="mb-2">
                            <a href="{{ url('register') }}" class="text-light text-decoration-none">
                                <i class="bi bi-person-plus me-2"></i>Create Account
                            </a>
                        </li>
                    {% endif %}
                    <li class="mb-2">
                        <a href="mailto:info@bluegreensheet.com" class="text-light text-decoration-none">
                            <i class="bi bi-envelope me-2"></i>Contact Us
                        </a>
                    </li>
                </ul>
            </div>

            <!-- Contact Info -->
            <div class="col-lg-3 col-md-6 mb-4">
                <h6 class="text-white mb-3">Get in Touch</h6>
                <div class="text-light">
                    <div class="mb-3">
                        <i class="bi bi-envelope me-2"></i>
                        <a href="mailto:info@bluegreensheet.com" class="text-light text-decoration-none">
                            info@bluegreensheet.com
                        </a>
                    </div>
                    <div class="mb-3">
                        <i class="bi bi-clock me-2"></i>
                        <span>Platform available 24/7</span>
                    </div>
                    <div class="mb-3">
                        <i class="bi bi-geo-alt me-2"></i>
                        <span>Serving Independent Schools Nationwide</span>
                    </div>
                </div>

                <!-- Newsletter Signup -->
                <div class="mt-4">
                    <h6 class="text-white mb-2">Stay Updated</h6>
                    <p class="text-light small mb-2">Get notified about new opportunities</p>
                    <div class="input-group input-group-sm">
                        <input type="email" class="form-control" placeholder="Your email" aria-label="Email">
                        <button class="btn btn-primary" type="button">
                            <i class="bi bi-envelope"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>

    </div>

    {# Canvas - Copyrights  #}
    <div id="copyrights">
        <div class="container">
            <div class="row align-items-center py-3">
                <div class="col-md-6 text-center text-md-start">
                    <div class="text-light">
                        <small>&copy; {{ "now"|date('Y') }} BlueGreen Sheet LLC. All rights reserved.</small>
                    </div>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <div class="d-flex justify-content-center justify-content-md-end gap-3 flex-wrap">
                        <a href="#" class="text-light text-decoration-none small">Privacy Policy</a>
                        <a href="#" class="text-light text-decoration-none small">Terms of Service</a>
                        <a href="#" class="text-light text-decoration-none small">Support</a>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12 text-center">
                    <div class="text-light small opacity-75">
                        Successor to The Blue Sheet and The Green Sheet
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>