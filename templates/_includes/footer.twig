{# Canvas - Footer  #}
<footer id="footer" class="dark">
    <div class="container">
        <div class="row g-4 py-5">
            <!-- About Section -->
            <div class="col-lg-3 col-md-6 mb-4">
                <h5 class="text-white mb-3">BlueGreen Sheet</h5>
                <p class="text-light mb-3">
                    Connecting independent school professionals with exceptional opportunities since 1990.
                    We facilitate meaningful connections between talented educational leaders and outstanding independent schools.
                </p>
                <div class="d-flex gap-2">
                    {# <a href="#" class="text-light" aria-label="Follow us on Facebook">
                        <i class="bi bi-facebook" style="font-size: 1.2rem;"></i>
                    </a>
                    <a href="#" class="text-light" aria-label="Follow us on Twitter">
                        <i class="bi bi-twitter" style="font-size: 1.2rem;"></i>
                    </a> #}
                    <a href="https://www.linkedin.com/company/bluegreensheet/" class="text-light" aria-label="Connect on LinkedIn">
                        <i class="bi bi-linkedin" style="font-size: 1.2rem;"></i>
                    </a>
                </div>
            </div>

            <!-- Quick Links -->
            <div class="col-lg-2 offset-lg-1 col-md-6 mb-4">
                <h6 class="text-white mb-3">For All Visitors</h6>
                <ul class="list-unstyled">
                    <li class="mb-2">
                        <a href="{{ url('about') }}" class="text-light text-decoration-none">
                            <i class="bi bi-lightbulb me-2"></i>About BGS
                        </a>
                    </li>                
                    <li class="mb-2">
                        <a href="{{ url('jobs') }}" class="text-light text-decoration-none">
                            <i class="bi bi-search me-2"></i>Browse Jobs
                        </a>
                    </li>
                </ul>
            </div>

            <!-- For Schools -->
            <div class="col-lg-3 col-md-6 mb-4">
                <h6 class="text-white mb-3">For Schools & Consultants</h6>
                <ul class="list-unstyled">
                    {% if currentUser and currentUser.can('postJobs') %}
                        <li class="mb-2">
                            <a href="{{ url('jobs/post') }}" class="text-light text-decoration-none">
                                <i class="bi bi-plus-circle me-2"></i>Post a Job
                            </a>
                        </li>
                    {% else %}
                        <li class="mb-2">
                            <a href="{{ url('login') }}" class="text-light text-decoration-none">
                                <i class="bi bi-person-plus me-2"></i>Login
                            </a>
                        </li>                    
                        <li class="mb-2">
                            <a href="{{ url('register') }}" class="text-light text-decoration-none">
                                <i class="bi bi-person-plus me-2"></i>Create Account
                            </a>
                        </li>                        
                    {% endif %}
                </ul>
            </div>

            <!-- Contact Info -->
            <div class="col-lg-3 col-md-6 mb-4">
                <h6 class="text-white mb-3">Get in Touch</h6>
                <div class="text-light">
                    <div class="mb-3">
                        <i class="bi bi-envelope me-2"></i>
                        <a href="{{ siteUrl }}contact" class="text-light text-decoration-none">
                            Contact Us
                        </a>
                    </div>
                </div>

                <!-- Newsletter Signup -->
                <div class="mt-4">
                    <h6 class="text-white mb-2">Stay Updated</h6>
                    <div class="text-light">
                        <div class="mb-3">
                            <i class="bi bi-bell me-2"></i>
                            <a href="{{ siteUrl }}subscribe" class="text-light text-decoration-none">
                                Subscribe for Job Alerts
                            </a>
                        </div>
                    </div>                    
                </div>

            </div>
        </div>

    </div>

    {# Canvas - Copyrights  #}
    <div id="copyrights">
        <div class="container">
            <div class="row align-items-center py-3">
                <div class="col-md-6 text-center text-md-start">
                    <div class="text-light">
                        <small>&copy; {{ "now"|date('Y') }} BlueGreen Sheet LLC. All rights reserved.</small>
                    </div>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <div class="d-flex justify-content-center justify-content-md-end gap-3 flex-wrap">
                        <a href="{{ siteUrl }}privacy" class="text-light text-decoration-none small">Privacy Policy & Terms of Use</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>