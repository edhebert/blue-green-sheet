{# templates/set-password.twig #}
{% extends "_layout" %}

{% block content %}
<div class="login-container">

{% if craft.app.session.hasFlash('notice') %}
    <div class="alert alert-success">{{ craft.app.session.getFlash('notice') }}</div>
{% endif %}

{% if craft.app.session.hasFlash('error') %}
    <div class="alert alert-danger">{{ craft.app.session.getFlash('error') }}</div>
{% endif %}

    <h2>Set New Password</h2>
    <p>Enter your new password below.</p>

    {% if errors is defined %}
        <div class="error-messages">
            {% for error in errors %}
                <p class="error">{{ error }}</p>
            {% endfor %}
        </div>
    {% endif %}

<form method="post" accept-charset="UTF-8">
    {{ csrfInput() }}
    {{ actionInput('users/set-password') }}

    {# Redirect to login after successful password reset #}
    {{ redirectInput('login') }}

    {# Include the password reset code from the URL #}
    {% set code = craft.app.request.getQueryParam('code') %}
    {% set id = craft.app.request.getQueryParam('id') %}

    {% if code %}
        <input type="hidden" name="code" value="{{ code }}">
    {% endif %}

    {% if id %}
        <input type="hidden" name="id" value="{{ id }}">
    {% endif %}

    <div class="form-group">
        <label for="newPassword">New Password</label>
        <input type="password"
               id="newPassword"
               name="newPassword"
               required
               autofocus>
    </div>

    <div class="form-group">
        <label for="confirmPassword">Confirm Password</label>
        <input type="password"
               id="confirmPassword"
               name="confirmPassword"
               required>
    </div>

    <button type="submit" class="button rounded-pill mt-4" style="width: 100%">Set New Password</button>
</form>
    <p class="center"><a href="/login">Back to Login</a></p>
</div>

<style>
.login-container {
    max-width: 400px;
    margin: 2rem auto;
    padding: 2rem;
    border: 1px solid #ddd;
    border-radius: 8px;
}

.form-group {
    margin-bottom: 1rem;
}

.form-group label {
    display: block;
    margin-bottom: 0.25rem;
    font-weight: bold;
}

.form-group input {
    width: 100%;
    padding: 0.5rem;
    border: 1px solid #ccc;
    border-radius: 4px;
}

.error {
    color: #d32f2f;
    margin-bottom: 1rem;
}

.alert {
    padding: 1rem 1.25rem;
    margin-bottom: 1rem;
    border: 1px solid transparent;
    border-radius: 0.375rem;
}

.alert-success {
    color: #0f5132;
    background-color: #d1e7dd;
    border-color: #badbcc;
}

.alert-danger {
    color: #842029;
    background-color: #f8d7da;
    border-color: #f5c2c7;
}

</style>
{% endblock %}
