{% extends "_layout.twig" %}

{% block title %}{{ entry.title }} Â· {{ siteName }}{% endblock %}

{% block content %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Organization Header -->
            <div class="row align-items-center mb-5">
                <div class="col-md-8">
                    <h1 class="display-5 fw-bold mb-2">{{ entry.title }}</h1>
                    {% if entry.orgDescription %}
                        <p class="lead text-muted">{{ entry.orgDescription }}</p>
                    {% endif %}
                </div>
                {% if entry.logo.one() %}
                    <div class="col-md-4 text-md-end">
                        <img src="{{ entry.logo.one().getUrl('wide250') }}"
                             alt="{{ entry.title }}"
                             class="img-fluid"
                             style="max-height: 120px;">
                    </div>
                {% endif %}
            </div>

            <!-- Organization Details -->
            <div class="row g-5">
                <div class="col-lg-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-header bg-primary bg-opacity-10">
                            <h3 class="h5 mb-0">
                                <i class="bi bi-building me-2"></i>Organization Details
                            </h3>
                        </div>
                        <div class="card-body">
                            <!-- Website -->
                            {% if entry.website %}
                                <div class="mb-3">
                                    <strong class="d-block text-muted small mb-1">Website</strong>
                                    <a href="{{ entry.website }}" target="_blank" class="text-decoration-none" rel="noopener noreferrer">
                                        <i class="bi bi-globe me-2"></i>{{ entry.website }}
                                        <i class="bi bi-box-arrow-up-right ms-1 small"></i>
                                    </a>
                                </div>
                            {% endif %}

                            <!-- Phone -->
                            {% if entry.orgPhone %}
                                <div class="mb-3">
                                    <strong class="d-block text-muted small mb-1">Phone</strong>
                                    <a href="tel:{{ entry.orgPhone }}" class="text-decoration-none">
                                        <i class="bi bi-telephone me-2"></i>{{ entry.orgPhone }}
                                    </a>
                                </div>
                            {% endif %}

                            <!-- Location -->
                            {% set hasLocation = entry.orgLocation|length or entry.orgCity|length or entry.orgState|length or entry.orgZip|length %}
                            {% if hasLocation %}
                                <div class="mb-3">
                                    <strong class="d-block text-muted small mb-1">Location</strong>
                                    <div>
                                        <i class="bi bi-geo-alt me-2"></i>
                                        {% if entry.orgLocation %}
                                            {{ entry.orgLocation }}<br>
                                        {% endif %}
                                        {% if entry.orgCity or entry.orgState or entry.orgZip %}
                                            {% if entry.orgCity %}{{ entry.orgCity }}{% endif %}{% if entry.orgCity and (entry.orgState or entry.orgZip) %}, {% endif %}{% if entry.orgState %}{{ entry.orgState }}{% endif %}{% if entry.orgZip %} {{ entry.orgZip }}{% endif %}
                                        {% endif %}
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <div class="col-lg-8">
                    <!-- Current Job Openings -->
                    {% set activeJobs = craft.entries()
                        .section('jobs')
                        .listingOrganization(entry.id)
                        .status('live')
                        .orderBy('postDate DESC')
                        .all() %}

                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-header bg-light border-0">
                            <h3 class="h5 mb-0">
                                <i class="bi bi-briefcase me-2"></i>Current Job Openings
                                {% if activeJobs|length %}
                                    <span class="badge bg-primary ms-2">{{ activeJobs|length }}</span>
                                {% endif %}
                            </h3>
                        </div>
                        <div class="card-body">
                            {% if activeJobs|length %}
                                <div class="row g-3">
                                    {% for job in activeJobs %}
                                        <div class="col-12">
                                            <div class="border rounded p-3 job-listing">
                                                <div class="d-flex justify-content-between align-items-start">
                                                    <div class="flex-grow-1">
                                                        <h4 class="h6 mb-2">
                                                            <a href="{{ job.url }}" class="text-decoration-none stretched-link">
                                                                {{ job.title }}
                                                            </a>
                                                        </h4>

                                                        <!-- Job Details -->
                                                        <div class="text-muted small mb-2">
                                                            {% if job.jobCategory.one() %}
                                                                <span class="me-3">
                                                                    <i class="bi bi-tag me-1"></i>{{ job.jobCategory.one().title }}
                                                                </span>
                                                            {% endif %}
                                                            {% if job.country %}
                                                                <span class="me-3">
                                                                    <i class="bi bi-geo-alt me-1"></i>
                                                                    {% if job.country.value == 'international' %}
                                                                        {% if job.jobLocation %}{{ job.jobLocation }}{% else %}International{% endif %}
                                                                    {% else %}
                                                                        {% if job.jobCity %}{{ job.jobCity }}, {% endif %}{% if job.jobState %}{{ job.jobState.value }}{% endif %}
                                                                    {% endif %}
                                                                </span>
                                                            {% endif %}
                                                        </div>

                                                        <!-- Job Description Preview -->
                                                        {% if job.jobDescription %}
                                                            <p class="text-muted small mb-2">
                                                                {{ job.jobDescription|striptags|raw|truncate(150) }}
                                                            </p>
                                                        {% endif %}

                                                        <!-- Salary Range -->
                                                        {% if job.jobSalaryLow or job.jobSalaryHigh %}
                                                            <div class="text-success small fw-semibold">
                                                                <i class="bi bi-currency-dollar me-1"></i>
                                                                {% if job.jobSalaryLow and job.jobSalaryHigh %}
                                                                    ${{ job.jobSalaryLow|number_format }} - ${{ job.jobSalaryHigh|number_format }}
                                                                {% elseif job.jobSalaryLow %}
                                                                    ${{ job.jobSalaryLow|number_format }}+
                                                                {% elseif job.jobSalaryHigh %}
                                                                    Up to ${{ job.jobSalaryHigh|number_format }}
                                                                {% endif %}
                                                            </div>
                                                        {% endif %}
                                                    </div>

                                                    <div class="text-end ms-3">
                                                        <small class="text-muted">
                                                            Posted {{ job.postDate|date('M j, Y') }}
                                                        </small>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>

                                {# <!-- View All Jobs Link -->
                                <div class="text-center mt-4">
                                    <a href="{{ url('jobs') }}?organization={{ entry.id }}" class="btn btn-outline-primary">
                                        <i class="bi bi-arrow-right me-2"></i>View All Jobs from {{ entry.title }}
                                    </a>
                                </div> #}

                            {% else %}
                                <!-- No Active Jobs -->
                                <div class="text-center py-4">
                                    <div class="mb-3">
                                        <i class="bi bi-briefcase text-muted" style="font-size: 3rem;"></i>
                                    </div>
                                    <h5 class="text-muted mb-2">No Current Openings</h5>
                                    <p class="text-muted">
                                        {{ entry.title }} doesn't have any active job postings at this time.
                                    </p>
                                    <a href="{{ url('jobs') }}" class="btn btn-outline-secondary">
                                        <i class="bi bi-search me-2"></i>Browse All Jobs
                                    </a>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

            <!-- Back to Browse -->
            <div class="text-center mt-5">
                <a href="{{ url('jobs') }}" class="button rounded-pill">
                    <i class="bi bi-arrow-left me-2"></i>Back to All Jobs
                </a>
            </div>
        </div>
    </div>
</div>

<style>
.job-listing {
    position: relative;
    transition: all 0.2s ease;
}

.job-listing:hover {
    background-color: #f8f9fa;
    border-color: var(--cnvs-themecolor) !important;
}

.job-listing .stretched-link:hover {
    text-decoration: underline !important;
}
</style>
{% endblock %}