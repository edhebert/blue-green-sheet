{% extends "_layout.twig" %}

{% block title %}Contact Us Â· {{ siteName }}{% endblock %}

{% block content %}
<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <!-- Header Section -->
      <div class="text-center mb-5">
        <h1 class="display-4 fw-bold mb-3">Contact Us</h1>
        <p class="lead text-muted">
          We're here to help with any questions about BlueGreen Sheet
        </p>
      </div>


      <!-- Contact Form -->
      <div class="row">
        <div class="col-12">
          <div class="card border-0 shadow-sm">

            <div class="card-body p-4">
              {% set form = craft.formie.forms.handle('contact').one() %}
              {% if form %}
                {{ craft.formie.renderForm('contact') }}
              {% else %}
                <div class="alert alert-warning" role="alert">
                  <i class="bi bi-exclamation-triangle me-2"></i>
                  Contact form is temporarily unavailable. Please email us directly at
                  <a href="mailto:support@bluegreensheet.com" class="alert-link">support@bluegreensheet.com</a>
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      </div>


      <!-- Additional Resources -->
      <div class="text-center mt-6 pt-4 border-top">
        <h4 class="h5 mb-3">Need Help Getting Started?</h4>
        <div class="d-flex gap-3 justify-content-center flex-wrap">
          <a href="{{ url('about') }}" class="button button-border rounded-pill">
            <i class="bi bi-info-circle me-2"></i>Learn About Us
          </a>
          <a href="{{ url('overview') }}" class="button button-border rounded-pill">
            <i class="bi bi-currency-dollar me-2"></i>View Pricing
          </a>
          <a href="{{ url('jobs') }}" class="button button-border rounded-pill">
            <i class="bi bi-search me-2"></i>Browse Jobs
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}