{% extends "_layout.twig" %}

{% block title %}About Us Â· {{ siteName }}{% endblock %}

{% block content %}
<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <!-- Header Section -->
      <div class="text-center mb-5">
        <h1 class="display-4 fw-bold mb-3">{{ entry.title }}</h1>
        <p class="lead text-muted">
          {{ entry.subheading }}
        </p>
      </div>

      <!-- Main Content -->
      <div class="row g-5 mb-5">
        <div class="col-12">
        {{ entry.body }}
        </div>
      </div>

      <!-- Values Section -->
      <div class="row g-4 mb-5">
      {% for block in entry.benefits %}
            <div class="col-md-4 text-center">
            <div class="mb-3">
                <i class="fa-solid fa-{{ block.iconClass }} text-primary" style="font-size: 3rem;"></i>
            </div>
            <h3 class="h5 fw-bold mb-3">{{ block.title }}</h3>
            <p class="text-muted">
                {{ block.benefitDescription }}
            </p>
        </div>


      {% endfor %}

      </div>

      {# <!-- Stats Section -->
      <div class="bg-light rounded-3 p-4 mb-5">
        <div class="row text-center">
          <div class="col-md-3 mb-3 mb-md-0">
            <div class="h2 fw-bold text-primary mb-1">30+</div>
            <div class="text-muted small">Years of Service</div>
          </div>
          <div class="col-md-3 mb-3 mb-md-0">
            <div class="h2 fw-bold text-primary mb-1">1000+</div>
            <div class="text-muted small">Schools Served</div>
          </div>
          <div class="col-md-3 mb-3 mb-md-0">
            <div class="h2 fw-bold text-primary mb-1">5000+</div>
            <div class="text-muted small">Professionals Connected</div>
          </div>
          <div class="col-md-3">
            <div class="h2 fw-bold text-primary mb-1">24/7</div>
            <div class="text-muted small">Platform Access</div>
          </div>
        </div>
      </div> #}

      <!-- Call to Action -->
      <div class="text-center">
        {% if currentUser %}
          <!-- User is logged in -->
          <div class="mb-4">
            <h3 class="h4 mb-3">Ready to explore opportunities?</h3>
            <p class="text-muted mb-4">
              Browse our current job openings and find your next career opportunity.
            </p>
            <a href="{{ url('jobs') }}" class="button button-xlarge rounded-pill px-4 me-3">
              <i class="bi bi-search me-2"></i>Browse Jobs
            </a>
            {% if currentUser.can('postJobs') %}
              <a href="{{ url('jobs/post') }}" class="button button-xlarge rounded-pill button-border px-4">
                <i class="bi bi-plus-circle me-2"></i>Post a Job
              </a>
            {% endif %}
          </div>
        {% else %}
          <!-- User is not logged in -->
          <div class="mb-4">
            <h3 class="h4 mb-3">Join our community today</h3>
            <p class="text-muted mb-4">
              Whether you're seeking your next opportunity or looking to hire exceptional talent, we're here to help.
            </p>
            <div class="d-flex gap-3 justify-content-center flex-wrap">
              <a href="{{ url('login') }}" class="button button-xlarge rounded-pill px-4">
                <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
              </a>
              <a href="{{ url('register') }}" class="button button-xlarge rounded-pill button-border px-4">
                <i class="bi bi-person-plus me-2"></i>Create Account
              </a>
            </div>
          </div>
        {% endif %}
      </div>

      <!-- Contact Information -->
      <div class="border-top pt-5 mt-5">
        <div class="row">
          <div class="col-md-6 mb-4">
            <h3 class="h5 fw-bold mb-3">Get in Touch</h3>
            <p class="text-muted mb-3">
              Have questions about our platform or need assistance? We're here to help.
            </p>
            <div class="d-flex align-items-center mb-2">
              <i class="bi bi-envelope text-primary me-3"></i>
              <a href="mailto:support@bluegreenshet.com"><span>support@bluegreensheet.com</span></a>
            </div>
          </div>
          <div class="col-md-6 mb-4">
            <h3 class="h5 fw-bold mb-3">For Schools & Consultants</h3>
            <p class="text-muted mb-3">
              Learn more about our job posting services and how we can help you find exceptional candidates.
            </p>
            <a href="{{ url('overview') }}" class="text-primary text-decoration-none">
              <i class="bi bi-arrow-right me-2"></i>View Pricing
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}