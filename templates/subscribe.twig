{% extends "_layout.twig" %}

{% block title %}Subscribe to Our Newsletter Â· {{ siteName }}{% endblock %}

{% block content %}
<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <!-- Header Section -->
      <div class="text-center mb-5">
        <h1 class="display-5 fw-bold mb-3">Stay Informed About New Opportunities</h1>
        <p class="lead text-muted">
          Subscribe to receive our monthly newsletter featuring the latest<br>job listings in independent education
        </p>
      </div>

      <!-- Mailchimp Subscribe Form -->
      <div class="mb-5">
        <div class="card border-0 shadow-sm">
          <div class="card-body p-4">
            <div id="mc_embed_shell">
              <link href="//cdn-images.mailchimp.com/embedcode/classic-061523.css" rel="stylesheet" type="text/css">
              <div id="mc_embed_signup">
                <form action="https://bluegreensheet.us9.list-manage.com/subscribe/post?u=4df298beef9630e5c726af09f&amp;id=7981660f13&amp;f_id=009c57e1f0" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank">
                  <div id="mc_embed_signup_scroll">
                    <h2>Subscribe to Our Newsletter</h2>
                    <div class="indicates-required"><span class="asterisk">*</span> indicates required</div>
                    <div class="mc-field-group">
                      <label for="mce-EMAIL">Email Address <span class="asterisk">*</span></label>
                      <input type="email" name="EMAIL" class="required email" id="mce-EMAIL" required="" value="">
                    </div>
                    <div id="mce-responses" class="foot">
                      <div class="response" id="mce-error-response" style="display: none;"></div>
                      <div class="response" id="mce-success-response" style="display: none;"></div>
                    </div>
                    <div aria-hidden="true" style="position: absolute; left: -5000px;">
                      <input type="text" name="b_4df298beef9630e5c726af09f_7981660f13" tabindex="-1" value="">
                    </div>
                    <div style="margin-top: 1.5rem;">
                      <input type="submit" name="subscribe" id="mc-embedded-subscribe" class="button button-large rounded-pill" value="Subscribe">
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>


      <!-- Newsletter Benefits Section -->
      <div class="mb-5">
        <div class="card border-0 shadow-sm">
          <div class="card-body p-4">
            <div class="d-flex align-items-center mb-3">
              <i class="bi bi-envelope-check-fill text-primary me-3" style="font-size: 1.5rem;"></i>
              <h2 class="h4 fw-bold mb-0">Why Subscribe?</h2>
            </div>

            <p class="mb-4">
              Our monthly newsletter delivers curated job opportunities directly to your inbox, helping you discover your next career move in educational leadership.
            </p>

            <h3 class="h5 fw-bold mb-3">What You'll Receive:</h3>
            <ul class="list-unstyled">
              <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i><strong>Latest Job Listings</strong> - All new positions posted in the past month</li>
              <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i><strong>Featured Opportunities</strong> - Highlighted positions across various leadership roles</li>
              <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i><strong>Regional Updates</strong> - Opportunities organized by location</li>
              <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i><strong>No Spam</strong> - Only one email per month with relevant job opportunities</li>
            </ul>

            <div class="alert alert-info border-start border-4 border-info mt-4">
              <p class="mb-0">
                <strong>100% Free:</strong> Our newsletter is completely free for job seekers. Unsubscribe at any time with one click.
              </p>
            </div>
          </div>
        </div>
      </div>


      <script type="text/javascript" src="//s3.amazonaws.com/downloads.mailchimp.com/js/mc-validate.js"></script>
      <script type="text/javascript">
        (function($) {
          window.fnames = new Array();
          window.ftypes = new Array();
          fnames[0]='EMAIL';ftypes[0]='email';
          fnames[1]='FNAME';ftypes[1]='text';
          fnames[2]='LNAME';ftypes[2]='text';
          fnames[3]='ADDRESS';ftypes[3]='address';
          fnames[4]='PHONE';ftypes[4]='phone';
          fnames[5]='BIRTHDAY';ftypes[5]='birthday';
          fnames[6]='COMPANY';ftypes[6]='text';
          fnames[7]='MMERGE7';ftypes[7]='text';
        }(jQuery));
        var $mcj = jQuery.noConflict(true);
      </script>

      <style type="text/css">
        #mc_embed_signup {
          background: #fff;
          clear: left;
          font: 14px Helvetica, Arial, sans-serif;
          width: 100%;
        }
        #mc_embed_signup h2 {
          font-size: 1.25rem;
          font-weight: 600;
          margin-bottom: 1rem;
        }
        #mc_embed_signup input.email {
          border-radius: 0.375rem;
          border: 1px solid #dee2e6;
          padding: 0.5rem 0.75rem;
          font-size: 1rem;
        }
        /* Force submit button to display */
        form#mc-embedded-subscribe-form input#mc-embedded-subscribe[type="submit"].button,
        #mc_embed_signup form input[type="submit"].button,
        #mc_embed_signup #mc-embedded-subscribe {
          all: unset !important;
          background-color: var(--cnvs-themecolor) !important;
          border: none !important;
          border-radius: 0.375rem !important;
          padding: 0.5rem 1.5rem !important;
          font-size: 1rem !important;
          color: white !important;
          cursor: pointer !important;
          display: inline-block !important;
          visibility: visible !important;
          opacity: 1 !important;
          height: auto !important;
          width: auto !important;
          position: static !important;
          text-align: center !important;
          line-height: normal !important;
          font-family: inherit !important;
        }
        #mc_embed_signup form input[type="submit"].button:hover {
          opacity: 0.9 !important;
        }
      </style>


      <!-- Additional Info -->
      <div class="text-center">
        <div class="card border-0" style="background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);">
          <div class="card-body p-4">
            <h3 class="h5 mb-3">Looking for More Jobs?</h3>
            <p class="text-muted mb-4">
              Don't wait for the monthly newsletter - browse all current opportunities now and find your perfect position today.
            </p>
            <a href="{{ url('jobs') }}" class="button button-large rounded-pill px-5">
              <i class="bi bi-search me-2"></i>Browse All Jobs
            </a>
          </div>
        </div>
      </div>

      <!-- Benefits Icons -->
      <div class="row g-4 mt-5">
        <div class="col-md-4 text-center">
          <div class="mb-3">
            <i class="bi bi-clock-fill text-primary" style="font-size: 2rem;"></i>
          </div>
          <h4 class="h6 fw-bold">Save Time</h4>
          <p class="text-muted small">
            Get curated opportunities delivered monthly instead of searching daily.
          </p>
        </div>
        <div class="col-md-4 text-center">
          <div class="mb-3">
            <i class="bi bi-bell-fill text-primary" style="font-size: 2rem;"></i>
          </div>
          <h4 class="h6 fw-bold">Stay Updated</h4>
          <p class="text-muted small">
            Never miss new positions that match your career goals and location preferences.
          </p>
        </div>
        <div class="col-md-4 text-center">
          <div class="mb-3">
            <i class="bi bi-shield-check text-primary" style="font-size: 2rem;"></i>
          </div>
          <h4 class="h6 fw-bold">Privacy First</h4>
          <p class="text-muted small">
            Your email is safe with us. We never share your information with third parties.
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
